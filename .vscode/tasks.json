    "version": "2.0.0",
    "tasks": [

        // Build tasks for makefile:
        {
            "label": "Makefile",
            "type": "shell",
            "group": "build",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Makefile clean",
            "type": "shell",
            "group": "build",
            "command": "make",
            "args": [
                "clean"
            ],
        },
